        <strong class="govuk-tag govuk-phase-banner__content__tag">
            @sharedlocalizer["Beta"]
        </strong>
        <span class="govuk-phase-banner__text">
            @sharedlocalizer["This is a new service. "] @sharedlocalizer["Help us improve it and "] <a class="govuk-link" href="@WebAppConstants.ExternalLinks.BetaServiceFeedback" target="_blank" rel="noopener noreferrer"> @sharedlocalizer["give your feedback (opens in a new tab)."]</a>
            @if (currentLanguage == "cy")
            {
                <span>yn ein helpu i'w wella.</span>
            }
        </span>
    </p>
</div>
