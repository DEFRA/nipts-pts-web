@{
    var showBanner = this.Context.Request.Cookies["seen_cookie_message"] == null;
}

@if (showBanner)
{
    <div id="govuk-cookie-banner" class="govuk-cookie-banner" data-nosnippet="" role="region" aria-label="Cookies on Taking a pet from Great Britain to Northern Ireland">
        <div class="govuk-cookie-banner__message govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h2 class="govuk-cookie-banner__heading govuk-heading-m">
                        Cookies on Taking a pet from Great Britain to Northern Ireland
                    </h2>
                    <div class="govuk-cookie-banner__content">
                        <p class="govuk-body">We use some essential cookies to make this service work.</p>
                        <p class="govuk-body">We’d also like to use additional cookies so we can understand how you use the service and make improvements.</p>
                    </div>
                </div>
            </div>

            <div class="govuk-button-group">
                @using (Html.BeginForm("SetCookieViaBanner", "Content", FormMethod.Post, new { @class = "form", id = "cookie-form" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="GaCookieAcceptYesNo" value="" id="cookieChoice" />

                    <button type="submit" class="govuk-button" data-module="govuk-button" data-govuk-button-init="" onclick="handleCookieChoice('accept')">
                        Accept additional cookies
                    </button>
                    <button type="submit" class="govuk-button" data-module="govuk-button" data-govuk-button-init="" onclick="handleCookieChoice('reject')">
                        Reject additional cookies
                    </button>
                }

                <a class="govuk-link" href="@WebAppConstants.Pages.Content.Cookies">View cookies</a>
            </div>
        </div>
    </div>

    <script>
        function handleCookieChoice(choice) {
            document.getElementById('cookieChoice').value = choice;

            // Hide the cookie banner
            const banner = document.getElementById('govuk-cookie-banner');
            if (banner) {
                banner.style.display = 'none';
            }

            document.getElementById('cookie-form').submit();
        }
    </script>
}
