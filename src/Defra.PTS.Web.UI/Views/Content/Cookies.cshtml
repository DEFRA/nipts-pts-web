@using Defra.PTS.Web.UI.Extensions;

@{
    var pageTitle = "Cookies";
    this.SetMetaTitle(pageTitle);
}

<div class="govuk-width-container">
    <div class="govuk-main-wrapper " id="main-content">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">@pageTitle</h1>
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <p class="govuk-body">
                    Cookies are files saved on your phone, tablet or computer that
                    collect information about how you browse the service and are
                    used to:
                </p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>measure how you use the service so it can be improved</li>
                    <li>
                        remember notifications you’ve seen so you’re not shown them
                        again
                    </li>
                </ul>
                <h2 class="govuk-heading-l govuk-!-padding-top-3">
                    Cookies that are strictly necessary
                </h2>
                <p class="govuk-body">
                    These cookies are essential to make this service run and to help
                    us stay in line with data protection laws. You cannot turn these
                    cookies off.
                </p>
                <h3 class="govuk-heading-m">Introductory cookie message</h3>
                <p class="govuk-body">
                    You may see a pop-up welcome message when you first visit. A
                    cookie is stored so that your computer knows you’ve seen it and
                    knows not to show it again.
                </p>
                <table class="govuk-table govuk-!-margin-bottom-7">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header govuk-!-width-one-third"
                                scope="col">
                                Name
                            </th>
                            <th class="govuk-table__header govuk-!-width-one-half"
                                scope="col">
                                Purpose
                            </th>
                            <th class="govuk-table__header" scope="col">Expires</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell govuk-!-width-one-third">
                                cookie_policy
                            </td>
                            <td class="govuk-table__cell">
                                Lets us know you’ve seen our cookie message
                            </td>
                            <td class="govuk-table__cell">12 months</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">seen_cookie_message</td>
                            <td class="govuk-table__cell">
                                Lets us know you’ve seen our cookie message
                            </td>
                            <td class="govuk-table__cell">12 months</td>
                        </tr>
                    </tbody>
                </table>
                <h3 class="govuk-heading-m">Essential cookies</h3>
                <table class="govuk-table govuk-!-margin-bottom-7">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header govuk-!-width-one-third"
                                scope="col">
                                Name
                            </th>
                            <th class="govuk-table__header govuk-!-width-one-half"
                                scope="col">
                                Purpose
                            </th>
                            <th class="govuk-table__header" scope="col">Expires</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">cookieChallenge</td>
                            <td class="govuk-table__cell">
                                Lets us know that you’ve been asked about cookies
                            </td>
                            <td class="govuk-table__cell">Never</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">crumb</td>
                            <td class="govuk-table__cell">
                                Helps to prevent unauthorised requests
                            </td>
                            <td class="govuk-table__cell">On closing browser</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">idm</td>
                            <td class="govuk-table__cell">
                                Lets us know that you’ve logged in or registered
                            </td>
                            <td class="govuk-table__cell">3 days</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">_inter"action"</td>
                            <td class="govuk-table__cell">
                                Allows us to identify you as an individual user in our
                                applications
                            </td>
                            <td class="govuk-table__cell">3 days</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">_interaction.sig</td>
                            <td class="govuk-table__cell">
                                Allows us to identify you as an individual user in our
                                applications
                            </td>
                            <td class="govuk-table__cell">3 days</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">session</td>
                            <td class="govuk-table__cell">
                                Stores information that you’ve submitted
                            </td>
                            <td class="govuk-table__cell">3 days</td>
                        </tr>
                    </tbody>
                </table>
                <h2 class="govuk-heading-l">
                    Cookies that measure your use of the service
                </h2>
                <p class="govuk-body">
                    These cookies track the pages you visit, how long you spend on
                    each page and the options you choose. You can turn these cookies
                    on or off.
                </p>
                <p class="govuk-body">
                    We use Google Analytics to collect information about how you use
                    the service.
                </p>
                <p class="govuk-body">
                    This information is ‘anonymised’, we don’t know who it’s about.
                </p>
                <p class="govuk-body">
                    We do not collect or store your personal information (for
                    example, your name or address) and we do not allow Google to use
                    our data or share it with anyone else.
                </p>
                <p class="govuk-body">
                    We collect this information to make sure the service is meeting
                    your needs and to help us improve it.
                </p>
                <h3 class="govuk-heading-m">Google Analytics cookies</h3>
                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header govuk-table__header--column-full"
                                scope="col">
                                Name
                            </th>
                            <th class="govuk-table__header govuk-table__header--column-full"
                                scope="col">
                                Purpose
                            </th>
                            <th class="govuk-table__header govuk-table__header--column-sixth column-full"
                                scope="col">
                                Expires
                            </th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">yda_ga</td>
                            <td class="govuk-table__cell">
                                Helps us to count how many people use the service by
                                tracking if you’ve visited before
                            </td>
                            <td class="govuk-table__cell">In 2 years</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">yda_ga_gid</td>
                            <td class="govuk-table__cell">
                                Helps us to count how many people use the service by
                                tracking if you’ve visited before
                            </td>
                            <td class="govuk-table__cell">In 24 hours</td>
                        </tr>
                    </tbody>
                </table>
                <p>
                    You can
                    <a href="https://tools.google.com/dlpage/gaoptout"
                       class="govuk-link"
                       rel="noreferrer noopener"
                       target="_blank">opt out of Google Analytics cookies (opens in new tab)</a>.
                </p>
                <h2 class="govuk-heading-l govuk-!-margin-top-9">
                    Cookie settings
                </h2>

                <form method="post"
                      action="https://your-account.defra.gov.uk/management/cookies"
                      class="govuk-!-margin-bottom-5">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset"
                                  aria-describedby="usage-hint">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                                Cookies that measure the way you use the service
                            </legend>

                            <div id="usage-hint" class="govuk-hint">
                                These cookies track the pages you visit here, how long you
                                spend on each page and the options you choose. You can
                                turn these cookies on or off.
                            </div>

                            <div class="govuk-radios govuk-radios--inline govuk-!-padding-top-3"
                                 data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input"
                                           id="usageAccept"
                                           name="usage"
                                           type="radio"
                                           value="true" />
                                    <label class="govuk-label govuk-radios__label"
                                           for="usageAccept">
                                        On
                                    </label>
                                </div>

                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input"
                                           id="usageReject"
                                           name="usage"
                                           type="radio"
                                           value="false" />
                                    <label class="govuk-label govuk-radios__label"
                                           for="usageReject">
                                        Off
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset"
                                  aria-describedby="settings-hint">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                                Cookies that remember your settings
                            </legend>

                            <div id="settings-hint" class="govuk-hint">
                                These cookies do things like remember your preferences and
                                the choices you make to personalise your experience when
                                using this service.
                            </div>

                            <div class="govuk-radios govuk-radios--inline govuk-!-padding-top-3"
                                 data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input"
                                           id="settingsAccept"
                                           name="settings"
                                           type="radio"
                                           value="true" />
                                    <label class="govuk-label govuk-radios__label"
                                           for="settingsAccept">
                                        On
                                    </label>
                                </div>

                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input"
                                           id="settingsReject"
                                           name="settings"
                                           type="radio"
                                           value="false" />
                                    <label class="govuk-label govuk-radios__label"
                                           for="settingsReject">
                                        Off
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <input type="hidden"
                           name="crumb"
                           value="no2FriWdwzmjPGZptZS2rQqa6ENm9nnsSrFGZtgjPak" />

                    <button class="govuk-button"
                            data-module="govuk-button"
                            id="button-continue">
                        Save changes
                    </button>
                </form>
                <h3 class="govuk-heading-l">Government services</h3>
                <p class="govuk-body">
                    Most services we link to are run by different government
                    departments, for example HM Revenue and Customs (HMRC) or the
                    Home Office. These services may set other cookies and, if so,
                    will have their own cookies policy.
                </p>
                <div class="govuk-inset-text">
                    <p class="govuk-body-s">
                        This was last updated on 21 April 2023
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>